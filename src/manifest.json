{
	"manifest_version": 2,

	"name": "Spoiler Blocker",
	"description": "Blocks spoilers on your Facebook and Twitter feed.",
	"version": "0.2.0",

	"browser_action": {
		"default_title": "Spoiler Blocker",
		"default_icon": {
			"16": "resources/img/icon16.png",
			"32": "resources/img/icon32.png"
		},
		"default_popup": "panel.html"
	},

	"icons": {
		"16": "resources/img/icon16.png",
		"32": "resources/img/icon32.png",
		"64": "resources/img/icon64.png",
		"128": "resources/img/icon128.png"
	},

	"permissions": ["activeTab", "storage"],

	"background": {
		"page": "bg.html"
	},

	"content_scripts": [
		{
			"matches": ["*://*.facebook.com/*", "*://facebook.com/*"],
			"js": ["fb.js"],
			"run_at": "document_start"
		},
		{
			"matches": ["*://*.twitter.com/*", "*://twitter.com/*"],
			"js": ["tw.js"],
			"run_at": "document_start"
		}
	]
}