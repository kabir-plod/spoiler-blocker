{
	"manifest_version": 2,

	"name": "React extension",
	"description": "Testing the react extension",
	"version": "0.1",

	"browser_action": {
		"default_title": "React extension",
		"default_popup": "panel.html"
	},

	"permissions": ["activeTab", "storage"],

	"background": {
		"page": "bg.html"
	},

	"content_scripts": [
		{
			"matches": ["*://*.facebook.com/*", "*://facebook.com/*"],
			"js": ["fb.js"],
			"run_at": "document_start"
		}
	]
}