{
	"manifest_version": 2,

	"name": "Spoiler Blocker",
	"description": "Blocks spoilers on your Facebook feed.",
	"version": "0.1",

	"browser_action": {
		"default_title": "Spoiler Blocker",
		"default_icon": "img/s_icon128.png",
		"default_popup": "panel.html"
	},

	"icons": {
		"16": "img/s_icon16.png",
		"32": "img/s_icon32.png",
		"64": "img/s_icon64.png",
		"128": "img/s_icon128.png"
	},

	"permissions": ["activeTab", "storage", "https://salty-earth-11606.herokuapp.com/downloadList/*"],

	"background": {
		"page": "bg.html"
	},

	"content_scripts": [
		{
			"matches": ["*://*.facebook.com/*", "*://facebook.com/*"],
			"js": ["jquery.js", "mutation-summary.js", "fb.js"],
			"run_at": "document_start"
		},
		{
			"matches": ["*://*.twitter.com/*", "*://twitter.com/*"],
			"js": ["jquery.js", "mutation-summary.js", "twitter.js"],
			"run_at": "document_start"
		}
	]
}
